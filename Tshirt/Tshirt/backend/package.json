{
  "name": "tshirt-shop-backend",
  "version": "1.0.0",
  "description": "Backend for T-Shirt Shop",
  "main": "src/server.js",
  "type": "module",
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "start": "node scripts/ensureLogsDir.js && node src/server.js",
    "server": "nodemon src/server.js",
    "dev": "cross-env NODE_ENV=development npm run ensure-logs && nodemon src/server.js",
    "prod": "cross-env NODE_ENV=production node src/server.js",
    "seed-db": "node src/utils/seedDatabase.js",
    "test": "jest --detectOpenHandles",
    "test:login": "node scripts/testLogin.js",
    "test:user": "node scripts/createTestUser.js",
    "test:order": "node scripts/testOrderFlow.js",
    "ensure-logs": "node scripts/ensureLogsDir.js",
    "lint": "eslint . --ext .js",
    "format": "prettier --write \"**/*.js\"",
    "prepare": "husky install"
  },
  "dependencies": {
    "@fortawesome/free-solid-svg-icons": "^7.0.1",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.37.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "esm": "^3.2.25",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^7.0.1",
    "fabric": "^5.3.0",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "http-status-codes": "^2.2.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "mongoose": "^7.8.7",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "multer-storage-cloudinary": "^4.0.0",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.9.5",
    "react-color": "^2.19.3",
    "react-icons": "^5.5.0",
    "react-toastify": "^11.0.5",
    "slugify": "^1.6.6",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "axios": "^1.11.0",
    "cross-env": "^7.0.3",
    "dotenv": "^17.2.2",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^8.0.3",
    "jest": "^29.6.4",
    "lint-staged": "^15.0.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
